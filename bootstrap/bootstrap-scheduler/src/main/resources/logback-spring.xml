<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="APPLICATION_NAME" source="spring.application.name" defaultValue="crawlinghub-scheduler"/>

    <!-- JSON Encoder for Production -->
    <springProfile name="prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <!-- MDC 필드 포함 -->
                <includeMdcKeyName>traceId</includeMdcKeyName>
                <includeMdcKeyName>spanId</includeMdcKeyName>
                <includeMdcKeyName>jobName</includeMdcKeyName>
                <includeMdcKeyName>jobExecutionId</includeMdcKeyName>

                <!-- 커스텀 필드 -->
                <customFields>{"application":"${APPLICATION_NAME}","environment":"prod"}</customFields>

                <!-- 타임스탬프 포맷 (ISO 8601) -->
                <timestampPattern>yyyy-MM-dd'T'HH:mm:ss.SSSZ</timestampPattern>

                <!-- 스택 트레이스 설정 -->
                <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                    <maxDepthPerThrowable>30</maxDepthPerThrowable>
                    <maxLength>2048</maxLength>
                    <shortenedClassNameLength>20</shortenedClassNameLength>
                    <rootCauseFirst>true</rootCauseFirst>
                </throwableConverter>
            </encoder>
        </appender>

        <!-- Application Loggers -->
        <logger name="com.ryuqq.crawlinghub" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Spring Scheduling -->
        <logger name="org.springframework.scheduling" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Spring Framework -->
        <logger name="org.springframework" level="WARN" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Hibernate -->
        <logger name="org.hibernate" level="WARN" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Root Logger -->
        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- Console Pattern for Local/Dev/Test -->
    <springProfile name="local,dev,test">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} [%thread] [%X{traceId:-}/%X{spanId:-}] [%X{jobName:-}] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <!-- Application Loggers -->
        <logger name="com.ryuqq.crawlinghub" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Spring Scheduling -->
        <logger name="org.springframework.scheduling" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Spring Framework -->
        <logger name="org.springframework" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Hibernate SQL -->
        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <!-- Root Logger -->
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

</configuration>
