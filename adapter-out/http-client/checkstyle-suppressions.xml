<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- HTTP Client Adapter Checkstyle Suppressions -->

    <!-- Response DTOs (External API 응답) -->
    <suppress checks="JavadocVariable" files=".*Response\.java$"/>
    <suppress checks="VisibilityModifier" files=".*Response\.java$"/>

    <!-- Configuration Classes -->
    <suppress checks="HideUtilityClassConstructor" files=".*Config\.java$"/>
</suppressions>
