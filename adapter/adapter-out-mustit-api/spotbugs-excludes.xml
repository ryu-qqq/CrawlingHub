<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Record 클래스는 생성자 매개변수 검증 제외 -->
    <Match>
        <Class name="~.*\.TokenRequest"/>
        <Bug pattern="NP_NULL_PARAM_DEREF"/>
    </Match>
    <Match>
        <Class name="~.*\.TokenApiResponse"/>
        <Bug pattern="NP_NULL_PARAM_DEREF"/>
    </Match>

    <!-- WebClient blocking 호출은 의도적 -->
    <Match>
        <Class name="~.*\.MustitTokenAdapter"/>
        <Method name="~(issueToken|refreshToken|validateToken)"/>
        <Bug pattern="RV_RETURN_VALUE_IGNORED"/>
    </Match>

    <!-- WebClient는 Spring Bean으로 불변 객체 -->
    <Match>
        <Class name="~.*\.MustitTokenAdapter"/>
        <Field name="webClient"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>
</FindBugsFilter>
